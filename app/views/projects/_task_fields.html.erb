<div class="nested-fields">
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
 
  <div class="field">
    <%= f.label :done %>
    <%= f.check_box  :done %>
  </div>
  <!-- COMENTÁRIO:
    link_to_remove_association é o helper que o cocoon nos fornece para deletar algum nested
  -->
  <%= link_to_remove_association "remove task", f %>

  <br><br><br>
</div>